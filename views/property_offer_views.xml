<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="property_offer_form_view" model="ir.ui.view">
        <field name="name">property.offer.form.view</field>
        <field name="model">property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="status"/>
                        <field name="partner_id"/>
                        <field name="property_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="property_offer_tree_view" model="ir.ui.view">
        <field name="name">property.offer.tree.view</field>
        <field name="model">property.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_accept" type="object" string="Accept" icon="fa-check"/>
                <button name="action_refused" type="object" string="Refused" icon="fa-check"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
</odoo>